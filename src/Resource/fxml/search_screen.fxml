<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="400.0" prefWidth="635.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="AppFx.Controller.SearchController">
   <children>
      <AnchorPane layoutX="14.0" layoutY="14.0" prefHeight="360.0" prefWidth="275.0" style="-fx-background-color: #FFFEFD;">
         <children>
            <TextField fx:id="search_input" layoutX="14.0" layoutY="14.0" onAction="#handleSearchInput" onKeyReleased="#handleChangeInputSearch" prefHeight="33.0" prefWidth="246.0" promptText="Search..." />
            <ListView fx:id="search_list_view" layoutX="16.0" layoutY="55.0" onMouseClicked="#handleSelectListView" prefHeight="258.0" prefWidth="246.0" />
         </children>
      </AnchorPane>
      <AnchorPane fx:id="right_content" layoutX="311.0" layoutY="14.0" prefHeight="360.0" prefWidth="310.0" style="-fx-background-color: #FFFEFD;">
         <children>
            <Label contentDisplay="GRAPHIC_ONLY" layoutX="111.0" layoutY="9.0" prefHeight="37.0" prefWidth="45.0" style="-fx-cursor: Hand;" text="Label">
               <graphic>
                  <ImageView fx:id="sound_btn" fitHeight="35.0" fitWidth="59.0" onMouseClicked="#handleSpeech" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: pointer;">
                     <image>
                        <Image url="@../icons/icons8_Speaker_48px.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Label>
            <ListView fx:id="list_view_explain" layoutX="13.0" layoutY="53.0" prefHeight="258.0" prefWidth="285.0" />
            <HBox layoutX="174.0" layoutY="7.0" prefHeight="41.0" prefWidth="122.0">
               <children>
                  <Label fx:id="edit" prefHeight="37.0" prefWidth="37.0" style="-fx-cursor: Hand;">
                     <graphic>
                        <ImageView fitHeight="38.0" fitWidth="37.0" onMouseClicked="#handleEdit" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../icons/icons8_Edit_52px_2.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Label>
                  <Label fx:id="bookmark" contentDisplay="GRAPHIC_ONLY" onMouseClicked="#handleBookmark" prefHeight="40.0" prefWidth="40.0" style="-fx-cursor: Hand;">
                     <graphic>
                        <ImageView fx:id="img_book_mark" fitHeight="43.0" fitWidth="38.0" onMouseClicked="#handleBookmark" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../icons/icons8_Star_52px.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Label>
                  <Label fx:id="delete" contentDisplay="GRAPHIC_ONLY" onMouseClicked="#handleDelete" prefHeight="39.0" prefWidth="40.0" style="-fx-cursor: Hand;" text="Label">
                     <graphic>
                        <ImageView fitHeight="37.0" fitWidth="41.0" onMouseClicked="#handleDelete" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: poin;">
                           <image>
                              <Image url="@../icons/icons8_Trash_52px.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Label>
               </children>
            </HBox>
         </children></AnchorPane>
   </children>
</AnchorPane>
